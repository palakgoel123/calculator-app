<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.Design"
    android:background="@color/black"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/purple_700"
        android:textColor="@color/black"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:text="0"
        android:layout_margin="1dp"
        android:textSize="40pt" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/buAC"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:textColor="@color/black"
                android:layout_margin="1dp"
                android:onClick="ACevent"
                android:text="AC">

            </Button>
            <Button
                android:id="@+id/buequal"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:layout_margin="1dp"
                android:textColor="@color/black"
                android:onClick="equalevent"
                android:text="result">

            </Button>
            <Button
                android:id="@+id/budivide"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:textColor="@color/black"
                android:layout_margin="1dp"
                android:onClick="operatorevent"
                android:text="/">

            </Button>
            <Button
                android:id="@+id/bumultiply"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:background="@color/purple_200"
                android:layout_margin="1dp"
                android:onClick="operatorevent"
                android:text="*">

            </Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/bu7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:layout_margin="1dp"
                android:onClick="numberevent"
                android:text="7">

            </Button>
            <Button
                android:id="@+id/bu8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:background="@color/teal_200"
                android:layout_margin="1dp"
                android:onClick="numberevent"
                android:text="8">

            </Button>
            <Button
                android:id="@+id/bu9"
                android:layout_width="30pt"
                android:textColor="@color/black"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:layout_margin="1dp"
                android:onClick="numberevent"
                android:text="9">

            </Button>
            <Button
                android:id="@+id/bupercentage"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:textColor="@color/black"
                android:layout_margin="1dp"
                android:onClick="percentage"
                android:text="%">

            </Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/bu4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:layout_margin="1dp"
                android:onClick="numberevent"
                android:text="4">

            </Button>
            <Button
                android:id="@+id/bu5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:layout_margin="1dp"
                android:onClick="numberevent"
                android:text="5">

            </Button>
            <Button
                android:id="@+id/bu6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:background="@color/teal_200"
                android:layout_margin="1dp"
                android:onClick="numberevent"
                android:text="6">

            </Button>
            <Button
                android:id="@+id/buplus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:layout_margin="1dp"
                android:onClick="operatorevent"
                android:text="+">

            </Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/bu1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:background="@color/teal_200"
                android:layout_margin="1dp"
                android:onClick="numberevent"
                android:text="1">

            </Button>

            <Button
                android:id="@+id/bu2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:background="@color/teal_200"
                android:onClick="numberevent"
                android:text="2">

            </Button>
            <Button
                android:id="@+id/bu3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:background="@color/teal_200"
                android:layout_margin="1dp"
                android:onClick="numberevent"
                android:text="3">

            </Button>
            <Button
                android:id="@+id/buminus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:background="@color/purple_200"
                android:layout_margin="1dp"
                android:onClick="operatorevent"
                android:text="-">

            </Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/bu0"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:background="@color/purple_200"
                android:onClick="numberevent"
                android:text="0">

            </Button>

            <Button
                android:id="@+id/budot"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:background="@color/purple_200"
                android:onClick="numberevent"
                android:text=".">

            </Button>

            <Button
                android:id="@+id/bupower2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:background="@color/purple_200"
                android:layout_margin="1dp"
                android:onClick="operatorevent"
                android:text="𝑥^2">

            </Button>

        </TableRow>

    </TableLayout>

</LinearLayout>

